---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: Helvetica, Arial, 'Liberation Sans', 'Nimbus Sans', 'Helvetica Neue', sans-serif;
    --aw-font-serif: Helvetica, Arial, 'Liberation Sans', 'Nimbus Sans', 'Helvetica Neue', sans-serif;
    --aw-font-heading: Helvetica, Arial, 'Liberation Sans', 'Nimbus Sans', 'Helvetica Neue', sans-serif;

    --aw-color-primary: rgb(157, 15, 15);
    --aw-color-secondary: rgb(241, 106, 106);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(39, 39, 39);
    --aw-color-text-default: rgb(39, 39, 39);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255, 252, 243);

    --aw-color-bg-page-dark: rgb(39, 39, 39);

    ::selection {
      background-color: lavender;
    }

    .tagline {
      font-family: 'Beth Ellen', cursive;
      font-weight: 400;
      font-style: normal;
      font-size: 38px;
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(1 97 239);
    --aw-color-secondary: rgb(1 84 207);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(3 6 32);

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
